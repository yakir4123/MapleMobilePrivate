<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/full_window"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="120dp"
        android:background="@drawable/window_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/npc_icon_window"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sub_window_background"
        app:layout_constraintStart_toStartOf="@id/full_window"
        app:layout_constraintEnd_toStartOf="@id/text_window"
        app:layout_constraintTop_toTopOf="@id/full_window"
        app:layout_constraintBottom_toBottomOf="@id/full_window"
        android:layout_margin="10dp"
        app:layout_constraintHorizontal_weight="1"
        />

    <ImageView
        android:id="@+id/text_window"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/sub_window_background"
        app:layout_constraintStart_toEndOf="@id/npc_icon_window"
        app:layout_constraintEnd_toEndOf="@id/full_window"
        app:layout_constraintTop_toTopOf="@id/full_window"
        app:layout_constraintBottom_toBottomOf="@id/full_window"
        android:layout_margin="10dp"
        app:layout_constraintHorizontal_weight="3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>