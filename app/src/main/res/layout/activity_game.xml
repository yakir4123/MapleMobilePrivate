<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bapplications.maplemobile.views.GameActivity">

    <data>
        <import type="com.bapplications.maplemobile.gameplay.player.PlayerStats"/>
        <variable
            name="viewModel"
            type="com.bapplications.maplemobile.views.GameActivityViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fragment
            android:id="@+id/game_fragment_container"
            class="com.bapplications.maplemobile.views.GameFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        Ui buttons layout-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ui_buttons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.helper.widget.Layer
                android:id="@+id/progress_layout_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="ui_toolbar, hp_progress_layout, mp_progress_layout, exp_progress_layout"
                app:layout_constraintEnd_toEndOf="@id/exp_progress_layout"
                app:layout_constraintStart_toStartOf="@id/hp_progress_layout"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/ui_toolbar"
                android:layout_width="0dp"
                android:layout_height="51dp"
                android:background="@drawable/window_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/level_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/hp_progress_layout"
                android:layout_marginTop="1dp"
                android:layout_marginStart="20dp"
                android:text="Lv. 181"
                android:textSize="@dimen/toolbar_text_size"
                android:textColor="@color/dirty_white"
                />

            <TextView
                android:id="@+id/job_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/exp_progress_layout"
                android:layout_marginTop="1dp"
                android:layout_marginStart="20dp"
                android:textSize="@dimen/toolbar_text_size"
                android:text="Thief"
                android:textColor="@color/dirty_white"
                />

            <include
                android:id="@+id/hp_progress_layout"
                layout="@layout/progress_stat_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp"
                app:colorBar="@{@color/hp_bar_color}"
                app:layout_constraintEnd_toStartOf="@id/mp_progress_layout"
                app:layout_constraintStart_toEndOf="@id/level_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:maxProgress="@{viewModel.max_hp}"
                app:progress="@{viewModel.hp}"
                app:title="@{`HP:`}" />

            <include
                android:id="@+id/mp_progress_layout"
                layout="@layout/progress_stat_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                app:colorBar="@{@color/mp_bar_color}"
                app:layout_constraintEnd_toStartOf="@id/tools_btn"
                app:layout_constraintStart_toEndOf="@+id/hp_progress_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:maxProgress="@{viewModel.max_mp}"
                app:progress="@{viewModel.mp}"
                app:title="@{`MP:`}" />

            <include
                android:id="@+id/exp_progress_layout"
                layout="@layout/progress_stat_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:colorBar="@{@color/exp_bar_color}"
                app:layout_constraintEnd_toEndOf="@id/mp_progress_layout"
                app:layout_constraintStart_toStartOf="@+id/hp_progress_layout"
                app:layout_constraintBottom_toBottomOf="@id/tools_btn"
                app:maxProgress="@{viewModel.max_exp}"
                app:progress="@{viewModel.exp}"
                app:title="@{`Exp:`}" />
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/window_background"
                app:layout_constraintTop_toBottomOf="@id/ui_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                android:text="LuPin"
                android:textColor="@color/dirty_white"
                android:layout_marginTop="2dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/tools_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_btn_background"
                app:backgroundTint="@color/sub_window_color_secondary"
                app:elevation="0dp"
                app:fabSize="mini"
                app:pressedTranslationZ="0dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/inventory_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_btn_background"
                app:backgroundTint="@color/window_color"
                app:elevation="0dp"
                app:fabSize="mini"
                android:translationY="@dimen/pops_down_or_left_translation"
                android:visibility="gone"
                app:pressedTranslationZ="0dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@+id/exp_progress_layout"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/set_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:contentDescription="Debugging button to change maps"
                android:maxWidth="84dp"
                android:maxHeight="84dp"
                android:scaleType="fitCenter"
                android:src="@drawable/treasure_map_64"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_tv" />

            <ImageView
                android:id="@+id/left_arrow_key"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/window_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/arrow_key"
                app:layout_constraintTop_toTopOf="@id/left_arrow_key"
                app:layout_constraintEnd_toEndOf="@id/left_arrow_key"
                app:layout_constraintStart_toStartOf="@id/left_arrow_key"
                app:layout_constraintBottom_toBottomOf="@id/left_arrow_key"
                android:rotation="270"
                android:layout_marginEnd="30dp"/>

            <ImageView
                android:id="@+id/down_arrow_key"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/window_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/left_arrow_key" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/arrow_key"
                app:layout_constraintTop_toTopOf="@id/down_arrow_key"
                app:layout_constraintEnd_toEndOf="@id/down_arrow_key"
                app:layout_constraintStart_toStartOf="@id/down_arrow_key"
                app:layout_constraintBottom_toBottomOf="@id/down_arrow_key"
                android:rotation="180"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/up_arrow_key"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/window_background"
                app:layout_constraintBottom_toTopOf="@id/down_arrow_key"
                app:layout_constraintStart_toEndOf="@id/left_arrow_key" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/arrow_key"
                app:layout_constraintTop_toTopOf="@id/up_arrow_key"
                app:layout_constraintEnd_toEndOf="@id/up_arrow_key"
                app:layout_constraintStart_toStartOf="@id/up_arrow_key"
                app:layout_constraintBottom_toBottomOf="@id/up_arrow_key"
                android:layout_marginBottom="30dp"/>


            <ImageView
                android:id="@+id/right_arrow_key"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:src="@drawable/window_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/down_arrow_key" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/arrow_key"
                app:layout_constraintTop_toTopOf="@id/right_arrow_key"
                app:layout_constraintEnd_toEndOf="@id/right_arrow_key"
                app:layout_constraintStart_toStartOf="@id/right_arrow_key"
                app:layout_constraintBottom_toBottomOf="@id/right_arrow_key"
                android:rotation="90"
                android:layout_marginStart="30dp"/>

            <ImageView
                android:id="@+id/jump_key"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/ui_btn_background"
                android:src="@drawable/ic_jump"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <GridLayout
                android:id="@+id/expressions_btns_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:rowCount="3"
                android:visibility="gone"
                android:translationY="@dimen/pops_up_or_right_translation"
                app:layout_constraintBottom_toTopOf="@+id/up_arrow_key"
                app:layout_constraintStart_toStartOf="@+id/expressions_btns" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/expressions_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_btn_background"
                android:src="@drawable/face_smile"
                app:backgroundTint="@color/window_color"
                app:elevation="0dp"
                app:fabSize="mini"
                app:pressedTranslationZ="0dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="25dp"
                app:layout_constraintBottom_toTopOf="@+id/left_arrow_key"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@android:color/black"
            android:clickable="true"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-30dp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:progressDrawable="@drawable/progressbar_loading"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bar"
                android:text="@string/loading_screen"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar"
                app:layout_constraintVertical_bias="0.058" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


