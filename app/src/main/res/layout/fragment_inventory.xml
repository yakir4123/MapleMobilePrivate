<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.bapplications.maplemobile.ui.BindingUtils"/>
        <import type="com.bapplications.maplemobile.gameplay.player.PlayerStats"/>
        <import type="com.bapplications.maplemobile.gameplay.player.inventory.InventoryType.Id"/>
        <variable
            name="viewModel"
            type="com.bapplications.maplemobile.ui.view_models.InventoryViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/window_background">

        <TextView
            android:id="@+id/inventory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/headline_window_background"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:paddingBottom="3dp"
            android:text="@string/popup_inventory_title"
            android:textColor="@color/tc_window"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sub_window_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/inventory_type_buttons_group"
            app:layout_constraintBottom_toTopOf="@id/gold_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/sub_window_background"
            />

        <ImageView
            android:id="@+id/item_info_return_to_inventory"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:layout_constraintEnd_toEndOf="@+id/sub_window_background"
            app:layout_constraintBottom_toTopOf="@+id/sub_window_background"
            android:src="@drawable/ic_arrow_point_to_right"
            android:layout_marginBottom="4dp"
            />

        <ImageView
            android:id="@+id/item_info_icon"
            android:layout_width="@dimen/big_icon_size"
            android:layout_height="@dimen/big_icon_size"
            app:layout_constraintTop_toTopOf="@id/item_info_background"
            app:layout_constraintEnd_toEndOf="@id/sub_window_background"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:background="@drawable/item_info_icon_background"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.ICON}"
            app:itemId="@{viewModel.slot.item.itemId}"
            />

        <TextView
            android:id="@+id/item_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tc_window"
            android:textSize="14sp"
            android:layout_marginTop="3dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:background="@drawable/headline_window_background_solid_edge"
            app:layout_constraintStart_toStartOf="@id/sub_window_background"
            app:layout_constraintTop_toTopOf="@id/sub_window_background"
            android:layout_marginStart="12dp"
            tools:text="Works Gloves"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.NAME}"
            app:itemId="@{viewModel.slot.item.itemId}"/>

        <ImageView
            android:id="@+id/item_info_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/window_background"
            app:layout_constraintTop_toBottomOf="@id/item_info_name"
            app:layout_constraintBottom_toBottomOf="@id/sub_window_background"
            app:layout_constraintStart_toStartOf="@id/item_info_name"
            app:layout_constraintEnd_toStartOf="@id/item_info_icon"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            />

        <TextView
            android:id="@+id/item_info_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/item_info_background"
            app:layout_constraintStart_toStartOf="@id/item_info_background"
            app:layout_constraintBottom_toBottomOf="@id/item_info_background"
            app:layout_constraintEnd_toEndOf="@id/item_info_background"
            android:padding="5dp"
            android:textSize="@dimen/item_info_sp"
            android:textColor="@color/tc_window"
            android:visibility="@{!viewModel.slot.item.equip}"
            tools:visibility="gone"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.DESC}"
            app:itemId="@{viewModel.slot.item.itemId}"/>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/req_flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="item_info_reqlvl_tv, item_info_colon_lvl, item_info_reqlvl,
                    item_info_reqstr_tv, item_info_colon_str, item_info_reqstr,
                    item_info_reqdex_tv, item_info_colon_dex, item_info_reqdex,
                    item_info_reqint_tv, item_info_colon_int, item_info_reqint,
                    item_info_reqluk_tv, item_info_colon_luk, item_info_reqluk,
                    item_info_reqfame_tv, item_info_colon_fame, item_info_reqfame"
            app:layout_constraintTop_toTopOf="@id/item_info_background"
            app:layout_constraintStart_toStartOf="@+id/item_info_background"
            app:layout_constraintEnd_toEndOf="@id/item_info_background"
            app:flow_verticalGap = "4dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="6dp"
            app:flow_wrapMode="aligned"/>

        <TextView
            android:id="@+id/item_info_reqlvl_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_info_req_lvl"
            android:textColor="@color/tc_window"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/item_info_reqstr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_info_req_str"
            android:textColor="@color/tc_window"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/item_info_reqdex_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_info_req_dex"
            android:textColor="@color/tc_window"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints"
            />


        <TextView
            android:id="@+id/item_info_reqint_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_info_req_int"
            android:textColor="@color/tc_window"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/item_info_reqluk_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_info_req_luk"
            android:textColor="@color/tc_window"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints"
            />


        <TextView
            android:id="@+id/item_info_reqfame_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_info_req_fame"
            android:textColor="@color/tc_window"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/item_info_colon_lvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/tc_window"
            android:textStyle="bold"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/item_info_colon_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/tc_window"
            android:textStyle="bold"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/item_info_colon_dex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/tc_window"
            android:textStyle="bold"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/item_info_colon_int"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/tc_window"
            android:textStyle="bold"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/item_info_colon_luk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/tc_window"
            android:textStyle="bold"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/item_info_colon_fame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textColor="@color/tc_window"
            android:textStyle="bold"
            android:textSize="@dimen/item_info_sp"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:id="@+id/item_info_reqlvl"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/inventory_item_cell_background"
            android:gravity="right"
            android:paddingRight="2dp"
            android:textAlignment="gravity"
            android:paddingEnd="3dp"
            android:textSize="10sp"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.REQ_LVL}"
            app:itemId="@{viewModel.slot.item.itemId}"
            tools:text="120"
            tools:ignore="RtlHardcoded,RtlSymmetry,MissingConstraints" />

        <TextView
            android:id="@+id/item_info_reqstr"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:background="@drawable/inventory_item_cell_background"
            android:gravity="right"
            android:paddingRight="2dp"
            android:textAlignment="gravity"
            android:paddingEnd="3dp"
            android:textSize="10sp"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.REQ_STR}"
            app:itemId="@{viewModel.slot.item.itemId}"
            tools:text="120"
            tools:ignore="RtlHardcoded,RtlSymmetry,MissingConstraints" />

        <TextView
            android:id="@+id/item_info_reqdex"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:background="@drawable/inventory_item_cell_background"
            android:gravity="right"
            android:paddingRight="2dp"
            android:textAlignment="gravity"
            android:paddingEnd="3dp"
            android:textSize="10sp"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.REQ_DEX}"
            app:itemId="@{viewModel.slot.item.itemId}"
            tools:text="120"
            tools:ignore="RtlHardcoded,RtlSymmetry,MissingConstraints" />

        <TextView
            android:id="@+id/item_info_reqint"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_marginStart="7dp"
            android:background="@drawable/inventory_item_cell_background"
            android:gravity="right"
            android:paddingRight="2dp"
            android:textAlignment="gravity"
            android:paddingEnd="3dp"
            android:textSize="10sp"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.REQ_INT}"
            app:itemId="@{viewModel.slot.item.itemId}"
            tools:text="120"
            tools:ignore="RtlHardcoded,RtlSymmetry,MissingConstraints" />

        <TextView
            android:id="@+id/item_info_reqluk"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:background="@drawable/inventory_item_cell_background"
            android:gravity="right"
            android:paddingRight="2dp"
            android:textAlignment="gravity"
            android:paddingEnd="3dp"
            android:textSize="10sp"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.REQ_LUK}"
            app:itemId="@{viewModel.slot.item.itemId}"
            tools:text="120"
            tools:ignore="RtlHardcoded,RtlSymmetry,MissingConstraints" />

        <TextView
            android:id="@+id/item_info_reqfame"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:background="@drawable/inventory_item_cell_background"
            android:gravity="right"
            android:paddingRight="2dp"
            android:textAlignment="gravity"
            android:paddingEnd="3dp"
            android:textSize="10sp"
            app:itemTypeStat="@{BindingUtils.ItemTypeStat.REQ_FAME}"
            app:itemId="@{viewModel.slot.item.itemId}"
            tools:text="120"
            tools:ignore="RtlHardcoded,RtlSymmetry,MissingConstraints" />
        
        <View
            android:id="@+id/item_info_split_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/sub_window_stroke"
            app:layout_constraintTop_toBottomOf="@id/req_flow"
            app:layout_constraintEnd_toEndOf="@id/item_info_background"
            app:layout_constraintStart_toStartOf="@id/item_info_background"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            />

        <ScrollView
            android:id="@+id/item_info_bonuses"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="@{viewModel.slot.item.equip}"
            app:layout_constraintTop_toBottomOf="@id/item_info_split_line"
            app:layout_constraintStart_toStartOf="@id/item_info_background"
            app:layout_constraintEnd_toEndOf="@id/item_info_background"
            app:layout_constraintBottom_toBottomOf="@id/item_info_background"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_info_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tc_window"
                    android:textSize="@dimen/item_info_sp"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.CATEGORY}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.STR}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_dex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.DEX}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_int"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.INT}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_luk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.LUK}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_hp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.HP}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_mp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.MP}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_watk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.WATK}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_magic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.MAGIC}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_wdef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.WDEF}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_mdef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.MDEF}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.ACC}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_avoid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.AVOID}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_hands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.HANDS}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.SPEED}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />
        
                <TextView
                    android:id="@+id/item_info_jump"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_info_sp"
                    android:textColor="@color/tc_window"
                    android:layout_marginTop="3dp"
                    app:itemTypeStat="@{BindingUtils.ItemTypeStat.JUMP}"
                    app:itemId="@{viewModel.slot.item.itemId}"
                    />

            </LinearLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/item_info_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="item_info_icon, item_info_name, item_info_return_to_inventory,
                            equip_info_screen, item_info_description, item_info_background,
                            item_info_drop_bt, item_info_bonuses"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/equip_info_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="item_info_split_line,
                    item_info_colon_dex, item_info_colon_fame, item_info_colon_int, item_info_colon_luk, item_info_colon_lvl, item_info_colon_str,
                    item_info_reqdex_tv, item_info_reqfame_tv, item_info_reqint_tv, item_info_reqluk_tv, item_info_reqlvl_tv, item_info_reqstr_tv,
                    item_info_reqdex, item_info_reqfame, item_info_reqint, item_info_reqluk, item_info_reqlvl, item_info_reqstr, item_info_equip_bt"
            android:visibility="@{viewModel.slot.item.equip}"
            tools:visibility="visible"
            />

        <Button
            android:id="@+id/item_info_drop_bt"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_size"
            app:layout_constraintBottom_toBottomOf="@+id/item_info_background"
            app:layout_constraintStart_toStartOf="@+id/item_info_icon"
            app:layout_constraintEnd_toEndOf="@+id/item_info_icon"
            android:text="@string/drop_action"
            android:background="@drawable/positive_btn"
            android:textColor="@color/tc_window"
            android:textAllCaps="false"
            android:layout_marginBottom="1dp"
            />

        <Button
            android:id="@+id/item_info_equip_bt"
            android:layout_width="0dp"
            android:layout_height="@dimen/btn_size"
            app:layout_constraintBottom_toTopOf="@+id/item_info_drop_bt"
            app:layout_constraintStart_toStartOf="@+id/item_info_drop_bt"
            app:layout_constraintEnd_toEndOf="@+id/item_info_drop_bt"
            android:background="@drawable/positive_btn"
            android:text="@string/equip_action"
            android:layout_marginBottom="8dp"
            android:textColor="@color/tc_window"
            android:textAllCaps="false"
            />

        <RadioGroup
            android:id="@+id/inventory_type_buttons_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkedButton="@={BindingUtils.inventoryTypeToButtonId(viewModel.selectedInventoryType) }"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:paddingTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/sub_window_background"
            app:layout_constraintStart_toStartOf="@id/sub_window_background"
            app:layout_constraintTop_toBottomOf="@id/inventory_title">

            <RadioButton
                android:id="@+id/equip_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/inventory_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="1dp"
                android:text="@string/popup_inventory_equip_btn"
                android:textColor="@color/tc_window"
                android:textSize="10sp"
                tools:checked="true" />

            <RadioButton
                android:id="@+id/use_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/inventory_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="1dp"
                android:text="@string/popup_inventory_use_btn"
                android:textColor="@color/tc_window"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/setup_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/inventory_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="1dp"
                android:text="@string/popup_inventory_setup_btn"
                android:textColor="@color/tc_window"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/etc_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/inventory_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="1dp"
                android:text="@string/popup_inventory_etc_btn"
                android:textColor="@color/tc_window"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/cash_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/inventory_selector"
                android:button="@android:color/transparent"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="1dp"
                android:text="@string/popup_inventory_cash_btn"
                android:textColor="@color/tc_window"
                android:textSize="10sp" />

        </RadioGroup>

        <com.bapplications.maplemobile.ui.custom_views.InventoryView
            android:id="@+id/inventory_items_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:columnWidth="@dimen/icon_size"
            app:layout_constraintTop_toTopOf="@id/sub_window_background"
            app:layout_constraintEnd_toEndOf="@id/sub_window_background"
            app:layout_constraintStart_toStartOf="@id/sub_window_background"
            app:layout_constraintBottom_toBottomOf="@id/sub_window_background" />

        <TextView
            android:id="@+id/loading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/inventory_items_recycler"
            app:layout_constraintEnd_toEndOf="@+id/inventory_items_recycler"
            app:layout_constraintStart_toStartOf="@id/inventory_items_recycler"
            app:layout_constraintBottom_toBottomOf="@id/inventory_items_recycler"
            android:text="@string/loading_screen"
            android:textSize="18sp"
            tools:visibility="gone"
            />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/inventory_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="inventory_type_buttons_group, inventory_items_recycler"
            android:visibility="visible"
            tools:visibility="invisible"
            />

        <ImageView
            android:id="@+id/gold_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/inventory_item_cell_background"
            android:padding="2dp"
            android:src="@drawable/gold_coin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/gold_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="8dp"
            android:text="@string/gold_text"
            android:textColor="@color/tc_window"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/gold_amount_tv"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/inventory_item_cell_background"
            android:gravity="right"
            android:paddingRight="2dp"
            android:text="1,000,000"
            android:textAlignment="gravity"
            app:layout_constraintEnd_toStartOf="@id/gold_text_tv"
            app:layout_constraintStart_toEndOf="@id/gold_iv"
            tools:ignore="RtlHardcoded,RtlSymmetry"
            tools:text="1,000,000 " />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>